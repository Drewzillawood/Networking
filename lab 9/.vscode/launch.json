    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Sender",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/sender",
            "args": [
              "127.0.0.1",
              "10.24.87.234"  
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build programs"
        },
        {
            "name": "(gdb) Launch Receiver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/receiver",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build programs"
        }
    ]
}